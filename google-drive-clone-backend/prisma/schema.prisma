generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  files    File[]
}

model File {
  id        String   @id @default(uuid())
  filename  String
  key       String
  uploadedAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
