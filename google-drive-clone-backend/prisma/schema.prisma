generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  files    File[]
  folders  Folder[] // one user has many folders
}

model Folder {
  id        String    @id @default(uuid())
  name      String
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  parentId  String?   // Optional: For nested folders, null for root folders
  parent    Folder?   @relation("SubFolders", fields: [parentId], references: [id], onDelete: Cascade)
  children  Folder[]  @relation("SubFolders") // Relation for nested folders
  files     File[]    // Files within this folder
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model File {
  id         String   @id @default(uuid())
  filename   String
  key        String
  uploadedAt DateTime @default(now())
  userId     String
  type       String   @default("file")
  mimetype   String?
  user       User     @relation(fields: [userId], references: [id])
  folderId   String? // optional (root files won't have folder)
  folder     Folder?  @relation(fields: [folderId], references: [id])
}
